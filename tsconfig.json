{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    // Strict Mode - Incremental Adoption
    "strict": false, // Keep false for now, enable individual flags
    "strictNullChecks": true, // Enable null/undefined checks
    "noImplicitAny": false, // Will enable after fixing critical files
    "strictFunctionTypes": true, // Enable strict function type checking
    "strictBindCallApply": true, // Enable strict bind/call/apply
    "skipLibCheck": true,
    "noEmit": true,
    "incremental": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}